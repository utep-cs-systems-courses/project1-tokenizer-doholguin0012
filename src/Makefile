# compiler flags. -g for debug, -03 for optimization
CFLAGS=-g -O3

# first target is built by default
all: uimain

# include file dependencies
history.o: history.h
tokenizer.o: tokenizer.h
uimain.o :uimain.c

# $@=target, $^=prerequisites
uimain: history.o tokenizer.o uimain.o
	cc -o $@ $^ $(CFLAGS) $(OBJS)

# all object files built form c files that include history.h and tokinizer.h
$(OBJS): history.c tokenizer.c

#deletes files generated by compilation
clean:
	rm -f *.o uimain

run:uimain
	./uimain
